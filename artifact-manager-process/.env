# Environment variables for docker-compose
MAVEN_REPO_PORT=9080
KOGITO_SERVICE_PORT=8082
# Database configuration - use container name for containerized deployment
DB_HOST=kogito-postgres
DB_PORT=5432
DB_NAME=kogito-db
DB_USER=artifact
DB_PASSWORD=Ch@ngeme

# Artifact Manager Process Service - for containerized deployment these should use container names
KOGITO_JOBS-SERVICE_URL=http://localhost:${KOGITO_SERVICE_PORT}/
KOGITO_INDEX-SERVICE_URL=http://localhost:${KOGITO_SERVICE_PORT}/
KOGITO_SERVICE_URL=http://localhost:${KOGITO_SERVICE_PORT}/

OIDC_CLIENT_ID=artifact-management-process
OIDC_CLIENT_SECRET=artifact-management-secret

# JWT Resource Server Configuration (equivalent to Spring Security OAuth2)
JWT_ISSUER_URI=http://localhost:9180/realms/artifact-realm
JWT_JWK_SET_URI=http://localhost:9180/realms/artifact-realm/protocol/openid-connect/certs

# Runtime Tools Management Console OIDC Client ID
RUNTIME_TOOLS_MANAGEMENT_CONSOLE_OIDC_AUTH_SERVER_URL=http://localhost:9180/realms/artifact-realm
RUNTIME_TOOLS_MANAGEMENT_CONSOLE_OIDC_CLIENT_ID=artifact-management-console

# Keycloak
KEYCLOAK_PORT=9180

# Management Console
MANAGEMENT_CONSOLE_PORT=8080
